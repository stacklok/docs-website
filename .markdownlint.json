{
  "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/v0.35.0/schema/.markdownlint.jsonc",
  "code-block-style": {
    "style": "fenced"
  },
  "code-fence-style": {
    "style": "backtick"
  },
  "emphasis-style": {
    "style": "underscore"
  },
  "first-line-h1": false,
  "heading-style": {
    "style": "atx"
  },
  "hr-style": {
    "style": "---"
  },
  "line-length": false,
  "no-bare-urls": false,
  "no-inline-html": {
    "allowed_elements": ["details", "summary", "img", "Tabs", "TabItem", "div"]
  },
  "proper-names": {
    "code_blocks": false,
    "names": ["Copilot", "GitHub", "ToolHive", "Datadog"]
  },
  "strong-style": {
    "style": "asterisk"
  },
  "table-pipe-style": {
    "style": "leading_and_trailing"
  },
  "ul-style": {
    "style": "dash"
  }
}
