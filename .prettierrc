{
  "jsxSingleQuote": true,
  "printWidth": 80,
  "proseWrap": "preserve",
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false,

  "overrides": [
    {
      "files": [
        "README.md",
        "STYLE-GUIDE.md",
        "docs/**/*.md",
        "docs/**/*.mdx",
        "blog/**/*.md",
        "blog/**/*.mdx"
      ],
      "options": {
        "proseWrap": "always"
      }
    },
    {
      "files": ["AGENTS.md", ".claude/**/*.md", ".github/prompts/**/*.md"],
      "options": {
        "proseWrap": "never"
      }
    }
  ]
}
