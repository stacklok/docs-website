{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    ":gitSignOff",
    ":semanticCommitsDisabled",
    "security:minimumReleaseAgeNpm"
  ],
  "labels": ["dependencies"],
  "prHourlyLimit": 4,
  "rangeStrategy": "bump",
  "schedule": ["* 0-7 * * 1"],
  "timezone": "America/New_York",
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "schedule": "at any time"
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Docker images in MCP usage guide Kubernetes manifests",
      "managerFilePatterns": ["/^docs/toolhive/guides-mcp/.*\\.mdx?$/"],
      "matchStrings": [
        "image:\\s*[\"']?(?<depName>[^:\"'\\s]+):(?<currentValue>[^\"'\\s]+)[\"']?\\s*(?:#.*)?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "extends": ["packages:linters"],
      "matchPackageNames": ["husky", "lint-staged", "markdownlint*", "globals"],
      "groupName": "linters",
      "automerge": true
    },
    {
      "matchManagers": ["github-actions"],
      "minimumReleaseAge": "3 days",
      "minimumReleaseAgeBehaviour": "timestamp-optional",
      "internalChecksFilter": "strict",
      "prCreation": "not-pending",
      "groupName": "GitHub Actions"
    },
    {
      "enabled": false,
      "matchDatasources": ["docker"],
      "matchPackageNames": ["mcr.microsoft.com/devcontainers/typescript-node"],
      "matchUpdateTypes": ["major"]
    },
    {
      "matchManagers": ["custom.regex"],
      "matchFileNames": ["/^docs/toolhive/guides-mcp//"],
      "groupName": "MCP usage guide Docker images",
      "schedule": ["before 10am on the first day of the month"],
      "minimumReleaseAge": "3 days",
      "minimumReleaseAgeBehaviour": "timestamp-optional",
      "internalChecksFilter": "strict",
      "prCreation": "not-pending",
      "labels": ["documentation", "mcp-guides"]
    }
  ]
}
