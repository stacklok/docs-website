{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:linters",
    "helpers:pinGitHubActionDigests",
    ":gitSignOff",
    ":semanticCommitsDisabled"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchPackageNames": ["husky", "lint-staged", "markdownlint*", "globals"],
      "groupName": "linters",
      "extends": ["schedule:weekly"]
    }
  ]
}
